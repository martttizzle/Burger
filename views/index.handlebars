<div class="container-fluid">
  <div class="row mt-4 mb-4">
    <h2 class="title w-100">Chowing on Bburger </h2>
  </div>
  <div class="justify-content-center">
    <form class="create-form">
      <div class="form-group">
        <label for="input" class="text-center">Eat the burger</label>
        <textarea class="form-control" id="input" rows="5"></textarea>
        <button type="submit"  id="submit">Submit</button>
    <img class="burgerpng" src="../assets/img/burgerjpg.jpg" >
      </div>
    </form>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-7">
   
      {{#each burgers}} {{#unless devoured}}
      <div class="row mt-2 justify-content-between itemwrap p-2 rounded">
        <i class="fas fa-bars fa-lg"></i>
        <p> {{this.name}}</p>
        <button type="submit"  data-id="{{this.id}}">Eat</button>
      </div>
      {{/unless}} {{/each}}
    </div>
    <div class="col-5 pl-4">
  
  

      {{#each burgers}} {{#if devoured}}
      <div class="row mt-2 justify-content-between endwrap p-2 rounded">
        <p> {{this.name}}<i class="far fa-trash-alt fa-lg remove"  data-id="{{this.id}}"></i></p>
      </div>
      {{/if}} {{/each}}
    </div>
  </div>
</div>
<script src="../assets/js/burgers.js"></script>